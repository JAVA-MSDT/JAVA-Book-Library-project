        <!--		</dependency>-->

        <!-- H2 used for development and testing not for production
Update the connection in database.properties file
-->
<!--        <dependency>-->
<!--            <groupId>com.opentable.components</groupId>-->
<!--            <artifactId>otj-pg-embedded</artifactId>-->
